    <style name="text_12_000000">
        <item name="android:textSize">12pt</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text_14_000000">
        <item name="android:textSize">14pt</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_16_000000">
        <item name="android:textSize">16pt</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text_18_000000">
        <item name="android:textSize">18pt</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text_20_000000">
        <item name="android:textSize">20pt</item>
